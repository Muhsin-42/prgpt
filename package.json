    "typescript": "5.3.3"
  },
  "manifest": {
    "host_permissions": [
      "https://*/*",
      "https://github.com/*"
    ],
    "permissions": [
      "tabs",
      "activeTab",
      "scripting",
      "contextMenus"
    ]
  },
  "compilerOptions": {
    "types": [
      "chrome",
      "node"
    ]
  },
  "content_scripts": [
